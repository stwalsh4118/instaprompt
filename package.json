{
  "name": "instaprompt",
  "displayName": "Instaprompt",
  "description": "Manage and reuse AI prompts within VS Code",
  "version": "0.0.1",
  "publisher": "instaprompt",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "instaprompt.addPrompt",
        "title": "Instaprompt: Add Prompt"
      },
      {
        "command": "instaprompt.editPrompt",
        "title": "Instaprompt: Edit Prompt"
      },
      {
        "command": "instaprompt.deletePrompt",
        "title": "Instaprompt: Delete Prompt"
      },
      {
        "command": "instaprompt.listPrompts",
        "title": "Instaprompt: List Prompts"
      },
      {
        "command": "instaprompt.selectPrompt",
        "title": "Instaprompt: Select Prompt"
      }
    ],
    "keybindings": [
      {
        "command": "instaprompt.selectPrompt",
        "key": "win+alt+l",
        "mac": "cmd+alt+l"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "esbuild": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "build": "pnpm run esbuild --minify",
    "package": "pnpm run build && vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "typescript": "^5.4.0"
  },
  "packageManager": "pnpm@10.15.0",
  "dependencies": {
    "uuidv7": "^1.1.0"
  }
}
